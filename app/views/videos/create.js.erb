$(document).trigger("hide-popovers");
<% if @video.errors.any? %>
	$.alert("<%=j error_messages_for(@video) %>", "error");
<% else %>
	<% if @video.upload? %>
		$.alert("<%=j t(:upload_success).html_safe %>", "notice");
	<% elsif @video.webcam? %>
		$.alert("<%=j t(:recording_success).html_safe %>", "notice");
	<% end %>
	$.get("<%= edit_video_path(@video) %>", {}, function() {
		window.eval(data.responseText);
	}, "script");
	<% puts "** #{edit_video_path(@video)}"%>
<% end %>
