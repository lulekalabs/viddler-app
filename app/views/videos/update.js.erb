<% if @video.errors.any? %>
	$.alert("<%=j error_messages_for(@video, false) %>", "error");
	$("#<%= edit_video_dom_id %>").html("<%=j render('edit').html_safe %>");
<% else %>
	$(document).trigger("hide-popovers");
	$.alert("<%=j t(:update_success).html_safe %>", "notice");
	window.location = '<%= video_url(@video) %>';
<% end %>

